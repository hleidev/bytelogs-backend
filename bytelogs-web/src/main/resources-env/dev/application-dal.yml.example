spring:
  datasource:
    url: jdbc:mysql://localhost:3306/${database.name}?useUnicode=true&allowPublicKeyRetrieval=true&autoReconnect=true&characterEncoding=UTF-8&useSSL=false&serverTimezone=Asia/Shanghai
    username: root
    password: your_mysql_password

  data:
    redis:
      host: 127.0.0.1
      port: 6379
      database: 12
      password: your_redis_password
      timeout: 10s
      lettuce:
        pool:
          max-active: 8
          max-wait: -1ms
          max-idle: 8
          min-idle: 0

# Redis健康检查配置
redis:
  health:
    check:
      enabled: true # 是否启用Redis健康检查
      interval: 30000 # 心跳检查间隔（毫秒），默认30秒
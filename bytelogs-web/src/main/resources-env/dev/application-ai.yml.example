# Spring AI配置
spring:
  ai:
    # 禁用所有自动配置，使用自定义配置
    chat:
      client:
        enabled: false
    # OpenAI
    openai:
      api-key: "disabled"
      base-url: "disabled"
    # DeepSeek
    deepseek:
      api-key: ${DEEPSEEK_API_KEY:your-deepseek-api-key}
      base-url: https://api.deepseek.com
    # Qwen
    qwen:
      api-key: ${QWEN_API_KEY:your-qwen-api-key}
      base-url: https://dashscope.aliyuncs.com/compatible-mode

# AI提供商配置
ai:
  # 默认提供商（当用户未指定时使用）
  default-provider: "qwen"
  
  providers:
    deepseek:
      enabled: true
      default-model: "deepseek-chat"
      supported-models: 
        - "deepseek-chat"
        - "deepseek-coder"
      temperature-range: [0.0, 2.0]
      max-tokens: 8192
    
    qwen:
      enabled: true
      default-model: "qwen-turbo"
      supported-models:
        - "qwen-turbo"
        - "qwen-plus"
        - "qwen-max"
        - "qwen-max-longcontext"
      temperature-range: [0.1, 1.99]
      max-tokens: 8000
    
    openai:
      enabled: false
      default-model: "gpt-3.5-turbo"
      supported-models:
        - "gpt-3.5-turbo"
        - "gpt-4"
        - "gpt-4-turbo"
        - "gpt-4o"
      temperature-range: [0.0, 2.0]
      max-tokens: 4096

  # 业务限制配置
  limit:
    # 是否启用使用量限制
    enabled: false
    # 每日最大消息数量
    daily-message-limit: 50
    # 每日最大Token消耗量
    daily-token-limit: 100000
    # 每日最大对话数量
    daily-conversation-limit: 10
    # 每小时最大消息数量（防刷）
    hourly-message-limit: 20
    # 单次消息最大长度
    max-message-length: 4000
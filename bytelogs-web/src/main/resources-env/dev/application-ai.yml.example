# Spring AI配置
spring:
  ai:
    # 禁用所有自动配置，使用自定义配置
    chat:
      client:
        enabled: false
    # OpenAI
    openai:
      api-key: "disabled"
      base-url: "disabled"
    # DeepSeek
    deepseek:
      api-key: ${DEEPSEEK_API_KEY:your-deepseek-api-key}
      base-url: https://api.deepseek.com
    # Qwen
    qwen:
      api-key: ${QWEN_API_KEY:your-qwen-api-key}
      base-url: https://dashscope.aliyuncs.com/compatible-mode

# 业务限制配置
ai:
  limit:
    # 是否启用使用量限制
    enabled: false
    # 每日最大消息数量
    daily-message-limit: 50
    # 每日最大Token消耗量
    daily-token-limit: 100000
    # 每日最大对话数量
    daily-conversation-limit: 10
    # 每小时最大消息数量（防刷）
    hourly-message-limit: 20
    # 单次消息最大长度
    max-message-length: 4000
# AI服务配置
ai:
  # 默认使用的模型类型 (deepseek 或 qwen)
  default-client: deepseek
  
  # 各模型配置
  clients:
    # DeepSeek配置
    deepseek:
      # DeepSeek API密钥，请在 https://platform.deepseek.com/api_keys 获取
      api-key: sk-your-deepseek-api-key
      # API基础URL，一般不需要修改
      base-url: https://api.deepseek.com
      # 默认使用的模型
      model: deepseek-chat
      # 请求超时时间（毫秒）
      timeout: 30000
      # 最大token数
      max-tokens: 4000
      # 温度参数，控制回复的随机性 (0.0-1.0)
      temperature: 0.7
    
    # 通义千问配置
    qwen:
      # 阿里云API密钥，请在阿里云控制台获取
      api-key: sk-your-qwen-api-key
      # API基础URL
      base-url: https://dashscope.aliyuncs.com/api/v1
      # 默认使用的模型
      model: qwen-turbo
      # 请求超时时间（毫秒）
      timeout: 30000
      # 最大token数
      max-tokens: 4000
      # 温度参数，控制回复的随机性 (0.0-1.0)
      temperature: 0.7
  
  # 使用量限制配置
  limit:
    # 是否启用使用量限制
    enabled: true
    # 每日最大消息数量
    daily-message-limit: 50
    # 每日最大Token消耗量
    daily-token-limit: 100000
    # 每日最大对话数量
    daily-conversation-limit: 10
    # 每小时最大消息数量（防刷）
    hourly-message-limit: 20
    # 单次消息最大长度
    max-message-length: 4000